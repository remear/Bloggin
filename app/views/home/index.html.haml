- if @posts.empty?
  .post
    %h2 Empty database.
    
- @posts.each do |post|
  .post
    %h2
      = link_to post.title, post.full_url
    .date
      = post.created_at.strftime("%B %e %Y")
    %p
      != post.content

    .meta
      .tags
        - if post.tags.empty?
          %h4
            No Tags Attached
        - else
          %ul
            %li
              - post.tags_array.each do |tag|
                = tag
              
      .permalink
        %a{:href => "#{post.full_url}", :title => "Permalink"} Permalink
  .hr